#include<stdio.h>
int main()
{
int d1,m1,y1;
int d2,m2,y2;
scanf("%d %d %d",&d1,&m1,&y1);
scanf("%d %d %d",&d2,&m2,&y2);
if (y1>y2)
                return 10000;

if (y1==y2){
            if (m1>m2)
                return (m1-m2)*500
            if ((m1==m2) && (d1>d2))
                return (d1-d2)*15;
  }
  return 0;
  }
